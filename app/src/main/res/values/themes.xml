<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.Test" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.Test" parent="Base.Theme.Test" />

    <style name="Theme.Text.Header" parent="Base.Theme.Test">
        <!--<item name="android:textSize">16sp</item>-->
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.Text" parent="Base.Theme.Test">
        <!--<item name="android:textSize">16sp</item>-->
        <item name="android:textColor">@color/dark_grey</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="Theme.Label" parent="Base.Theme.Test">
        <!--<item name="android:textSize">16sp</item>-->
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.EditText" parent="Base.Theme.Test">
        <!--<item name="android:textSize">16sp</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/et_border</item>
    </style>

    <style name="Theme.EditText.Active" parent="Base.Theme.Test">
        <!--<item name="android:textSize">16sp</item>-->
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/et_active</item>
    </style>

    <style name="Theme.Button" parent="Base.Theme.Test">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/light_blue</item>
        <item name="rippleColor">@color/blue</item>
    </style>

    <style name="Theme.FAB" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="android:radius">40dp</item>
    </style>

</resources>